<import src="../../wxParse/wxParse.wxml" />
<view class="container">
  <view class="swiper-container">
    <swiper class="swiper_box" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" bindchange="swiperchange">
      <!-- <block wx:for="{{goodsDetail.pics}}" wx:key="id"> -->
        <swiper-item>
          <image src="http://10.203.220.224:8001{{imgUrls}}" class="slide-image" width="355" height="150" mode="aspectFit" lazy-load="true" />
        </swiper-item>
      <!-- </block> -->
    </swiper>
    <view class="dots">
      <!-- <block wx:for="{{goodsDetail.pics}}" wx:key="unique"> -->
        <!-- <view class="dot{{index == swiperCurrent ? ' active' : ''}}"></view> -->
      <!-- </block> -->
    </view>
  </view>



  <view class="goods-info">
    <view class="goods-title">{{name}}</view>
    
    <view class="goods-price" style="padding-left:35rpx;">¥ {{price}}</view>
    <view class="goods-price" style="color:#999;font-size:24rpx;">销量：{{sales}}</view>
    <view class="goods-price" style="color:#999;font-size:24rpx;">库存:{{stock}}</view>
    <view class="goods-info-fx" bindtap='openShareDiv'>
      <image src='../../images/share.png' />
      <button open-type="share">分享</button>
      <text>好友分享</text>
    </view>
  </view>


 <view class="goods-des-info">
    <view class="label-title">商品介绍</view>
    <view class="goods-text">
    {{information}}
      <!-- <template is="wxParse" data="{{information}}" /> -->
    </view>
  </view>




</view>

<van-goods-action>
  <van-goods-action-icon
    icon="chat-o"
    text="客服"
    bind:click="onClickIcon"
  />
  <van-goods-action-icon
    icon="cart-o"
    text="购物车"
    bind:click="onClickIcon"
  />
  <van-goods-action-button
    text="加入购物车"
    type="warning"
    bind:click="onClickButton"
  />
  <van-goods-action-button
    text="立即购买"
    bind:click="onClickButton"
  />
</van-goods-action>
